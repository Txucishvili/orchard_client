@using MudBlazor
<div class="form-field--wrap">
    @if (Type == "Checkbox")
    {
        <div>
            @if (Label != null)
            {
                <div class="label">
                    @Label
                </div>
            }
            @if (MudTextFieldEl != null)
            {
                @MudTextFieldEl
            }
            @ChildContent
        </div>
    } else {
    <div>
        @if (Label != null)
        {
            <div class="label">
                @Label
            </div>
        }
        @if (MudTextFieldEl != null)
        {
            @MudTextFieldEl
        }
        else
        {
            
        }
        @ChildContent
    </div>
    }
</div>

@code {

    [Parameter]
    public string Type { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment Label { get; set; }

    [Parameter]
    public RenderFragment? MudTextFieldEl { get; set; }

}